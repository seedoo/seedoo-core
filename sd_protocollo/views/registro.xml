<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_sd_protocollo_registro_tree" model="ir.ui.view">
            <field name="name">view.sd.protocollo.registro.tree</field>
            <field name="model">sd.protocollo.registro</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="ordinamento" widget="handle"/>
                    <field name="nome"/>
                    <field name="codice"/>
                    <field name="ufficiale" widget="boolean_toggle"/>
                    <field name="sequence_id"/>
                </tree>
            </field>
        </record>

        <record id="view_sd_protocollo_registro_form" model="ir.ui.view">
            <field name="name">view.sd.protocollo.registro.form</field>
            <field name="model">sd.protocollo.registro</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <widget name="web_ribbon" title="Ufficiale" bg_color="bg-info"
                                attrs="{'invisible': [('ufficiale', '=', False)]}"/>
                        <group>
                            <group>
                                <field name="nome"/>
                                <field name="codice"/>
                                <field name="company_id"
                                       groups="base.group_multi_company"
                                       options="{'no_open': True, 'no_create': True}"
                                />
                                <field name="sequence_id"/>
                            </group>
                            <group>
                                <field name="ufficiale" widget="boolean_toggle"/>
                            </group>
                        </group>
                        <group>
                            <field name="utente_abilitato_ids"/>
                        </group>

                    </sheet>
                </form>
            </field>
        </record>


        <record id="view_sd_protocollo_registro_search" model="ir.ui.view">
            <field name="name">view.sd.protocollo.registro.search</field>
            <field name="model">sd.protocollo.registro</field>
            <field name="arch" type="xml">
                <search string="Search Registro">
                    <field name="nome"/>
                    <field name="codice"/>
                    <filter string="Ufficiale" name="ufficiale"  domain="[('ufficiale', '=', True)]"/>
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                </search>
            </field>
        </record>

    </data>
</odoo>