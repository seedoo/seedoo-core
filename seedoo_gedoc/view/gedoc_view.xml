                           attr="{'invisible': [('name', '=', 'gedoc.document')]}"/>
                    <field name="office_id"
                           attr="{'invisible': [('name', '=', 'gedoc.document')]}"/>
                    <separator
                            string="Inserisci parti del contenuto del documento"/>
                    <group>
                        <field name="index_content" nolabel="1"/>
