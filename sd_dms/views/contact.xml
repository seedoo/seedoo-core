<odoo>
    <data>

        <record id="view_sd_dms_contact_tree" model="ir.ui.view">
            <field name="name">view.sd.dms.contact.tree</field>
            <field name="model">sd.dms.contact</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="typology"/>
                    <field name="company_type"/>
                </tree>
            </field>
        </record>

        <record id="view_sd_dms_contact_form" model="ir.ui.view">
            <field name="name">view.sd.dms.contact.form</field>
            <field name="model">sd.dms.contact</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group name="group_invisible" invisible="1">
                            <field name="contact_pa_type"/>
                            <field name="parent_person_invisible"/>
                            <field name="name_invisible"/>
                            <field name="phone_invisible"/>
                            <field name="mobile_invisibile"/>
                            <field name="title_invisible"/>
                            <field name="street_invisible"/>
                            <field name="function_invisible"/>
                            <field name="fiscalcode_invisible"/>
                            <field name="vat_invisible"/>
                            <field name="email_invisible"/>
                            <field name="pec_mail_invisible"/>
                            <field name="name_amm_invisible"/>
                            <field name="person_or_company_invisible"/>
                            <field name="amm_invisible"/>
                            <field name="aoo_invisible"/>
                            <field name="uo_invisible"/>
                            <field name="contact_pa_invisible"/>
                            <field name="category_id_invisible"/>
                        </group>
                        <group>
                            <field name="partner_id"
                                   options="{'no_open': True}"
                            />
                        </group>
                        <hr/>
                        <group attrs="{'invisible': [('company_type','!=','company')]}">
                            <field name="company_type"
                                   invisible="1"
                            />
                            <field name="company_subject_type"
                                   style="width: 60% !important;"
                            />
                        </group>
                        <h3>
                            <field name="name"
                                   attrs="{'invisible':[('name_invisible','=',True)]}"
                                   nolabel="1"
                                   style="width: 60% !important;"
                            />
                            <field name="name_amm"
                                   attrs="{'invisible': [('name_amm_invisible','=',True)]}"
                                   placeholder="Name"
                                   style="width: 60% !important;"
                            />
                        </h3>
                        <group colspan="2">
                            <field name="parent_person"
                                   attrs="{'invisible': [('parent_person_invisible','=',True)]}"
                                   nolabel="1"
                            />
                        </group>

                        <group attrs="{'invisible':[('person_or_company_invisible','=',True)]}"
                               colspan="2"
                        >
                            <group>
                                <field name="title"
                                       attrs="{'invisible':[('title_invisible','=',True)]}"
                                />
                                <field name="vat"
                                       attrs="{'invisible':[('vat_invisible','=',True)]}"
                                />
                                <label for="street"
                                       string="Address"
                                       attrs="{'invisible': [('street_invisible','=',True)]}"
                                />
                                <div class="o_address_format" attrs="{'invisible': [('street_invisible','=',True)]}">
                                    <field name="street"
                                           placeholder="Street..."
                                           class="o_address_street"
                                    />
                                    <field name="street2"
                                           placeholder="Street 2..."
                                           class="o_address_street"
                                    />
                                    <field name="city"
                                           placeholder="City"
                                           class="o_address_city"
                                    />
                                    <field name="state_id"
                                           class="o_address_state"
                                           placeholder="State"
                                           options="{'no_open': True, 'no_quick_create': True}"
                                    />
                                    <field name="zip"
                                           placeholder="ZIP"
                                           class="o_address_zip"
                                    />
                                    <field name="country_id"
                                           placeholder="Country"
                                           class="o_address_country"
                                           options='{"no_open": True, "no_create": True}'
                                    />
                                </div>
                            </group>
                            <group>
                                <field name="fiscalcode"
                                       attrs="{'invisible': [('fiscalcode_invisible','=',True)]}"
                                />
                                <field name="function"
                                       attrs="{'invisible': [('function_invisible','=',True)]}"
                                />
                                <field name="email"
                                       attrs="{'invisible': [('email_invisible','=',True)]}"
                                />
                                <field name="pec_mail"
                                       attrs="{'invisible': [('pec_mail_invisible','=',True)]}"
                                />
                                <field name="phone"
                                       attrs="{'invisible': [('phone_invisible','=',True)]}"
                                />
                                <field name="mobile"
                                       attrs="{'invisible': [('mobile_invisibile','=',True)]}"
                                />
                            </group>
                        </group>

                        <group attrs="{'invisible': [('amm_invisible','=',True)]}"
                               colspan="2"
                        >
                            <group>
                                <field name="cod_amm"/>
                            </group>
                            <group>
                                <field name="email_amm"/>
                                <field name="pec_mail_amm"/>
                            </group>
                        </group>

                        <group attrs="{'invisible': [('aoo_invisible','=',True)]}"
                               colspan="2"
                        >
                            <group col="1">
                                <field name="name_aoo"/>
                                <field name="cod_aoo"/>
                            </group>
                            <group col="1">
                                <h4>Digital domiciles</h4>
                                <field name="digital_domicile_ids"
                                       nolabel="1"
                                       options="{'no_open': True, 'no_create': True}"
                                       class="pa_tree"
                                />
                            </group>
                        </group>

                        <group attrs="{'invisible': [('uo_invisible','=',True)]}"
                               colspan="2"
                        >
                            <group col="1">
                                <field name="name_ou"/>
                                <field name="cod_ou"/>
                            </group>
                            <group col="1">
                                <h4>Other e-mail PEC addresses</h4>
                                <field name="email_address_ids"
                                       nolabel="1"
                                       options="{'no_open': True, 'no_create': True}"
                                       class="pa_tree"
                                />
                            </group>
                        </group>

                        <group attrs="{'invisible': [('contact_pa_invisible','=',True)]}"
                               colspan="2"
                        >
                            <group>
                                <field name="contact_pa_name"
                                       force_save="1"
                                />
                            </group>
                            <group>
                                <field name="contact_pa_email"
                                       force_save="1"
                                />
                                <field name="contact_pa_pec_mail"
                                       force_save="1"
                                />
                            </group>
                        </group>

                        <group attrs="{'invisible':[('category_id_invisible','=',True)]}"
                               colspan="2"
                        >
                            <field name="category_id"
                                   widget="many2many_tags"
                                   options="{'color_field': 'color', 'no_create_edit': True}"
                                   placeholder="Tags..."
                                   optional="hide"
                            />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_sd_dms_contact_kanban" model="ir.ui.view">
            <field name="name">view.sd.dms.contact.kanban</field>
            <field name="model">sd.dms.contact</field>
            <field name="arch" type="xml">
                <kanban class="o_res_partner_kanban" create="false" sample="1">
                    <field name="id"/>
                    <field name="name"/>
                    <field name="email"/>
                    <field name="pec_mail"/>
                    <field name="company_type"/>
                    <field name="partner_id"/>
                    <field name="partner_image"/>
                    <field name="street"/>
                    <field name="street2"/>
                    <field name="zip"/>
                    <field name="city"/>
                    <field name="country_id"/>
                    <field name="state_id"/>
                    <field name="category_id"/>
                    <field name="is_private_company"/>
                    <field name="is_pa"/>
                    <field name="is_amm"/>
                    <field name="is_gps"/>
                    <field name="is_aoo"/>
                    <field name="is_uo"/>
                    <field name="parent_pa_name"/>
                    <field name="parent_gps_name"/>
                    <field name="parent_aoo_name"/>
                    <field name="parent_uo_name"/>
                    <field name="digital_domicile_ids_html"/>
                    <field name="email_address_ids_html"/>
                    <field name="contact_pa_name"/>
                    <field name="contact_pa_email"/>
                    <field name="contact_pa_pec_mail"/>
                    <field name="button_edit_contact_invisible"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_res_partner_kanban">
                                <div attrs="{'invisible': [('button_edit_contact_invisible','=',True)]}"
                                     class="o_dropdown_kanban dropdown"
                                >
                                    <a class="dropdown-toggle o-no-caret btn oe_edit_only"
                                       href="#"
                                       role="button"
                                       data-toggle="dropdown" aria-label="Dropdown menu"
                                       title="Dropdown menu">
                                        <span class="fa fa-ellipsis-v"/>
                                    </a>
                                    <div class="dropdown-menu" role="menu">
                                        <div class="col-4">
                                            <a role="menuitem" type="object"
                                               class="dropdown-item"
                                               name="edit_contact_action"
                                               t-attf-data-context="{'contact_id': id, 'wizard_label':'Edit Contact'}">
                                                <i class="fa fa-edit"/>
                                                Edit
                                            </a>
                                        </div>
                                        <div class="col-4">
                                            <a role="menuitem" type="object"
                                               class="dropdown-item"
                                               name="document_unlink_contact">
                                                <i class="fa fa-trash"/>
                                                Delete
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                <t t-if="!record.is_private_company.raw_value &amp;&amp; !record.is_pa.raw_value">
                                    <t t-set="placeholder"
                                       t-value="'/base/static/img/avatar_grey.png'"/>
                                    <t t-if="record.partner_image.raw_value">
                                        <div class="o_kanban_image_fill_left d-none d-md-block"
                                             t-attf-style="background-image:url('#{kanban_image('res.partner', 'image_128', record.partner_id.raw_value)}')">
                                        </div>
                                    </t>
                                    <t t-if="!record.partner_image.raw_value">
                                        <div class="o_kanban_image_fill_left d-none d-md-block"
                                             t-attf-style="background-image: url(#{placeholder})">
                                        </div>
                                    </t>
                                </t>
                                <t t-elif="record.is_private_company.raw_value">
                                    <t t-set="placeholder"
                                       t-value="'/base/static/img/company_image.png'"/>
                                    <div class="o_kanban_image_fill_left o_kanban_image_full"
                                         t-attf-style="background-image: url(#{placeholder})"
                                         role="img"/>
                                </t>
                                <t t-elif="record.is_amm.raw_value || record.is_gps.raw_value">
                                    <t t-set="placeholder"
                                       t-value="'/fl_partner_pa/static/img/PAGPS.png'"/>
                                    <div class="o_kanban_image_fill_left o_kanban_image_full"
                                         t-attf-style="background-image: url(#{placeholder})"
                                         role="img"/>
                                </t>
                                <t t-elif="record.is_aoo.raw_value">
                                    <t t-set="placeholder"
                                       t-value="'/fl_partner_pa/static/img/AOO.png'"/>
                                    <div class="o_kanban_image_fill_left o_kanban_image_full"
                                         t-attf-style="background-image: url(#{placeholder})"
                                         role="img"/>
                                </t>
                                <t t-elif="record.is_uo.raw_value">
                                    <t t-set="placeholder"
                                       t-value="'/fl_partner_pa/static/img/UO.png'"/>
                                    <div class="o_kanban_image_fill_left o_kanban_image_full"
                                         t-attf-style="background-image: url(#{placeholder})"
                                         role="img"/>
                                </t>
                                <div class="oe_kanban_details d-flex flex-column">
                                    <strong class="o_kanban_record_title oe_partner_heading">
                                        <b><field name="name"/></b>
                                    </strong>

                                    <div class="o_kanban_tags_section oe_kanban_partner_categories"/>
                                    <ul>
                                        <li>
                                            <span class="oe_kanban_list_many2many">
                                                <field name="category_id"
                                                       widget="many2many_tags"
                                                       options="{'color_field': 'color'}"
                                                />
                                            </span>
                                        </li>
                                        <li t-if="record.city.raw_value or record.country_id.raw_value">
                                            <t t-if="record.city.raw_value"><field name="city"/><t
                                                    t-if="record.country_id.raw_value">, </t></t>
                                            <t t-if="record.country_id.raw_value"><field
                                                    name="country_id"/></t>
                                        </li>

                                        <li t-if="record.pec_mail.raw_value" class="break_word">
                                            <field name="pec_mail"/> (PEC)
                                        </li>
                                        <li t-if="record.email.raw_value" class="break_word">
                                            <field name="email"/>
                                        </li>

                                        <li t-if="record.pec_mail_amm.raw_value &amp;&amp; (record.is_amm.raw_value || record.is_gps.raw_value)" class="break_word">
                                            <field name="pec_mail_amm"/> (PEC)
                                        </li>
                                        <li t-if="record.email_amm.raw_value &amp;&amp; (record.is_amm.raw_value || record.is_gps.raw_value)" class="break_word">
                                            <field name="email_amm"/>
                                        </li>

                                        <li t-if="record.parent_pa_name.raw_value" class="break_word">
                                            <b>PA</b>: <t t-esc="record.parent_pa_name.raw_value"/>
                                        </li>
                                        <li t-if="record.parent_gps_name.raw_value" class="break_word">
                                            <b>GPS</b>: <t t-esc="record.parent_gps_name.raw_value"/>
                                        </li>
                                        <li t-if="record.parent_aoo_name.raw_value" class="break_word">
                                            <b>AOO</b>: <t t-esc="record.parent_aoo_name.raw_value"/>
                                        </li>
                                        <li t-if="record.parent_uo_name.value" class="break_word">
                                            <b>UO</b>: <t t-esc="record.parent_uo_name.raw_value"/>
                                        </li>
                                        <li t-if="record.digital_domicile_ids_html.raw_value" class="break_word">
                                            <b>Digital domiciles</b>: <t t-esc="record.digital_domicile_ids_html.raw_value"/>
                                        </li>
                                        <li t-if="record.email_address_ids_html.raw_value" class="break_word">
                                            <b>Other e-mail PEC addresses</b>: <t t-esc="record.email_address_ids_html.raw_value"/>
                                        </li>
                                    </ul>
                                    <div class="o_row">
                                        <span class="oe_kanban_partner_links"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>


        <record id="view_sd_dms_contact_search" model="ir.ui.view">
            <field name="name">view.sd.dms.contact.search</field>
            <field name="model">sd.dms.contact</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="email"/>
                    <field name="pec_mail"/>
                </search>
            </field>
        </record>

    </data>
</odoo>