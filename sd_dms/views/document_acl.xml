<odoo>
    <data noupdate="0">

        <record id="view_sd_dms_document_acl_tree" model="ir.ui.view">
            <field name="name">view.sd.dms.document.acl.tree</field>
            <field name="model">sd.dms.document.acl</field>
            <field name="mode">primary</field>
            <field name="inherit_id" ref="fl_acl.view_fl_acl_tree"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='perm_create']" position="replace">

                </xpath>

            </field>
        </record>

        <record id="view_sd_dms_document_acl_form" model="ir.ui.view">
            <field name="name">view.sd.dms.document.acl.form</field>
            <field name="model">sd.dms.document.acl</field>
            <field name="mode">primary</field>
            <field name="inherit_id" ref="fl_acl.view_fl_acl_form"/>
            <field name="arch" type="xml">

                <xpath expr="//label[@for='res_model']" position="before">
                    <field name="res_id"
                           invisible="1"
                    />
                </xpath>

                <xpath expr="//field[@name='perm_create']" position="replace">

                </xpath>

            </field>
        </record>

    </data>
</odoo>